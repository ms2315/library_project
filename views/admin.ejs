<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        table {
            margin-top: 20px;
            width: 80%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #3498db;
            color: #fff;
        }

        p {
            margin-top: 10px;
        }

        .action-buttons {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        .action-button {
            background-color: #3498db;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .action-button:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>
    <h1>Book List</h1>

    <% if (books.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Book Type</th>
                    <th>Book Name</th>
                    <th>Author Name</th>
                    <th>Total Number of Books</th>
                    <th>Edition</th>
                </tr>
            </thead>
            <tbody>
                <% let totalBooks = 0; %>
                <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.bookType %></td>
                        <td><%= book.bookName %></td>
                        <td><%= book.authorName %></td>
                        <td><%= book.noofBooks %></td>
                        <td><%= book.edition %></td>
                    </tr>
                    <% totalBooks += book.noofBooks; %>
                <% }); %>
            </tbody>
        </table>

        <p>Total Number of All Books: <%= totalBooks %></p>

        <div class="action-buttons">
            <button class="action-button" onclick="location.href='/add'">Add Book</button>
            <button class="action-button" onclick="location.href='/update'">Update Book</button>
            <button class="action-button" onclick="location.href='/delete'">Delete Book</button>
        </div>
    <% } else { %>
        <p>No books available.</p>
    <% } %>
</body>
</html>
